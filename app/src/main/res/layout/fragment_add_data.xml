<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#EAEAEA">

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_inputs"
        android:hint="name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />

    <EditText
        android:id="@+id/edt_age"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_name"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_inputs"
        android:hint="age"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />

    <EditText
        android:id="@+id/edt_job_title"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_age"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_inputs"
        android:hint="job title"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />

    <Spinner
        android:id="@+id/spin_gender"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_job_title"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_inputs"
        android:entries="@array/gender"
        />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin_gender"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="50dp"
        android:text="Save"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:background="#f00"
        android:textColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>